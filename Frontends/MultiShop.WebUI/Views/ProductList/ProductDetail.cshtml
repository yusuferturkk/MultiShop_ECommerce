
@{
    ViewData["Title"] = "ProductDetail2";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid pb-5">
    <div class="row px-xl-5">

        @await Component.InvokeAsync("ProductDetailImageSlider", new { id = ViewBag.Id })

        @await Component.InvokeAsync("ProductDetailFeature", new { id = ViewBag.Id })

    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Ürün Detayı</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Ürün Bilgileri</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Yorumlar</a>
                </div>
                <div class="tab-content">

                    @await Component.InvokeAsync("ProductDetailDescription", new { id = ViewBag.Id })

                    @await Component.InvokeAsync("ProductDetailInformation", new { id = ViewBag.Id })

                    @await Component.InvokeAsync("ProductDetailReview", new { id = ViewBag.Id })

                </div>
            </div>
        </div>
    </div>
</div>