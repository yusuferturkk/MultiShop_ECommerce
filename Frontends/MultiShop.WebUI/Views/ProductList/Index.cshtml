
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Anasayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Ürünler</a>
                <span class="breadcrumb-item active">Ürün Listesi</span>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-3 col-md-4">

            @await Component.InvokeAsync("ProductListPriceFilter")

            @await Component.InvokeAsync("ProductListColorFilter")

            @await Component.InvokeAsync("ProductListSizeFilter")

        </div>
        <div class="col-lg-9 col-md-8">
            <div class="row pb-3">
                
                @await Component.InvokeAsync("ProductListGetProductCount")

                @await Component.InvokeAsync("ProductListProducts", new { id = ViewBag.Id })

                @await Component.InvokeAsync("ProductListPagination")

            </div>
        </div>
    </div>
</div>